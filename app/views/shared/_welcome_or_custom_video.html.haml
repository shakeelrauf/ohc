= f.form_group :video, label: { text: 'Video' } do
  = f.select :welcome_video_id, WelcomeVideo.active.accessible_by(current_ability).pluck(:name, :id), { include_blank: 'Custom Video', hide_label: true }, id: 'welcome-video-select'

  .custom
    = attachment_file_field(f, :video, help: t('help.file_field', file_type: 'MP4', file_size: number_to_human_size(f.object.class::MAX_FILE_SIZE)).html_safe, hide_label: true)

:javascript
  document.addEventListener('turbolinks:load', () => {
    const $customWrapper = $('.custom');
    const $customSelect = $('#welcome-video-select');

    function toggleCustomFileField() {
      $customWrapper.toggle(!$customSelect.val());
    }

    toggleCustomFileField();

    $customSelect.on('change', function() {
      toggleCustomFileField();
    });
  });
