- title_bar "Edit #{@camp_location.name}" do
  = delete_button(@camp_location, text: "Delete #{@camp_location.name}", remote: false, disabled: !@camp_location.can_be_deleted?)

= bootstrap_form_with model: @camp_location, url: camp_location_path(@camp_location) do |f|
  = render 'form', f: f

  = f.form_group do
    = f.submit update_button_label(CampLocation), class: 'btn btn-success'
