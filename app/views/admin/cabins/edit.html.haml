- title_bar "Edit #{@cabin.name}" do
  = delete_button(camp_cabin_path(@cabin.camp, @cabin), text: "Delete #{@cabin.name}", disabled: !@cabin.can_be_deleted?)

= bootstrap_form_with model: @cabin, local: true, url: camp_cabin_path(@cabin.camp, @cabin) do |f|
  = render 'form', f: f

  = f.form_group do
    = f.submit update_button_label(Cabin), class: 'btn btn-success', data: { disable_with: 'Uploading...' }
