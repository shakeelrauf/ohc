- title_bar "Edit Attendance of #{@attendance.user.full_name} at #{@camp.name}" do
  = delete_button(camp_attendance_path(@attendance.camp, @attendance), text: 'Delete Attendance')

= bootstrap_form_with model: @attendance, url: camp_attendance_path, local: true do |f|
  = render 'form', f: f

  = f.form_group do
    = f.submit 'Update Attendance', class: 'btn btn-success'
