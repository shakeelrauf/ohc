- title_bar "Add Person to #{@camp.name}"

= bootstrap_form_with model: @attendance, url: camp_attendances_path(@camp), local: true do |f|
  = render 'shared/form_base_errors', f: f
  = render 'form', f: f

  = f.form_group class: 'mt-4' do
    = f.submit 'Create Attendance', class: 'btn btn-success'
