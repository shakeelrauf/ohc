= render 'shared/form_base_errors', f: f

= f.text_field :first_name
= f.text_field :last_name

- if browser.platform.mac? && browser.safari?
  = f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year
- else
  = f.date_field :date_of_birth

= f.select :gender, (User.genders.values.map { |gender| [gender.titleize, gender]})

= f.email_field :email, label: 'Parent Email'

= render 'admin/attendances/form', f: f
